#include <iostream>
#include <sstream>
#include <ctime>


using namespace std;

#ifndef EMPLOYEE_H_
#define EMPLOYEE_H_

class Person {
private:
	static string emp_no;
	string firstname;
	string lastname;
	string title;
	time_t birthdate;
	time_t hiredate;
	char gender;

public:
	Person();
	~Person();
	void setEmp_no();
	void setFirstname();
	void setLastname();
	void setTitle();
	void setBirthdate();
	void setHiredata();
	void setGender();

};

class Empsalary: public Person {
private:
	double long salary;
	time_t from_date;
	time_t to_date;

public:
	void setSalary();
	void setFromdate();
	void setTodate();

};

#endif /* EMPLOYEE_H_ */
