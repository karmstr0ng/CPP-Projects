#include <iostream>
using namespace std;


int main() {

	string name = "Bob";
	int age = 32;

	string stream ss;

	ss << "Name is: ";
	ss << name;
	ss << "; Age is: ";
	ss << age;

	string info = ss.str();

	cout << info << endl;


	return 0;
}
